# Customer Support System Environment Variables
# Copy this file to .env and fill in your actual values

# Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# Optional Gemini Configuration Overrides
GEMINI_MODEL_NAME=gemini-1.5-pro
GEMINI_TEMPERATURE=0.3

# System Configuration
CONFIDENCE_THRESHOLD=0.7
MAX_RETRIES=3

# Database Configuration (if using external database)
DATABASE_URL=sqlite:///customer_support.db

# Redis Configuration (if using Redis for caching)
REDIS_URL=redis://localhost:6379

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=customer_support.log

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Security Configuration
SECRET_KEY=your_secret_key_here
ENABLE_CORS=true

# External Service URLs (if applicable)
ORDER_SERVICE_URL=http://localhost:8001
BILLING_SERVICE_URL=http://localhost:8002
CUSTOMER_SERVICE_URL=http://localhost:8003
